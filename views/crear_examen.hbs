<h1 class="mt-3">Amortización de prestamos</h1>
{{#if errores}}
  {{#each errores}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
  {{/each}}
{{/if}}

<form method="POST" action="/prestamo">
  <div class="form-group">
    <label for="nombre">Prestamo requerido</label>
    <input type="text" class="form-control" id="nombre" name="nombre">
  </div>
  <div class="form-group">
    <label for="nombre">Cantidad de años</label>
    <input type="text" class="form-control" id="nombre" name="nombre">
  </div>
   <div class="form-group">
    <label for="nombre">Interes</label>
    <input type="text" class="form-control" id="nombre" name="nombre">
  </div>
  <button type="submit" class="btn btn-primary">Calcular Amortización</button>
</form>